@model MillData.Models.ProductionData

@{
    ViewData["Title"] = "Edit";
}

<script>
    saveURL();
    function saveURL() {
        referrer = document.referrer.toString();
        localStorage.setItem('referrer', referrer);
        //alert(cookie);
    }
</script>


<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>ProductionData</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PkProductionId" />
        <div class="form-group">
            <label asp-for="FkMillKey" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input readonly asp-for="FkMillKey" class="form-control" asp-items="ViewBag.FkMillKey">
                <span asp-validation-for="FkMillKey" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FkProdCatId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="FkProdCatId" class="form-control" asp-items="ViewBag.FkProdCatId"></select>
                <span asp-validation-for="FkProdCatId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Units" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FkSourceId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="FkSourceId" class="form-control" asp-items="ViewBag.FkSourceId"></select>
                <span asp-validation-for="FkSourceId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SourceYear" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SourceYear" class="form-control" />
                <span asp-validation-for="SourceYear" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="#" onclick="return backtomillinfo()">Back to List</a>
    <script>
        function backtomillinfo()
        {
            var oldURL = document.referrer;
            window.location = oldURL;
            return oldURL;
        }
        

    </script>
</div>

